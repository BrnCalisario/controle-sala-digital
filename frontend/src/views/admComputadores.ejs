         <!-- EDITAR COMPUTADOR -->
       <div class="cadastrar">
            <div class="title">
                <i style="color:white; font-size: 5rem; margin-bottom: .3em;" class="fas fa-laptop-medical"></i>
                <h3 class="title">Editar Computador</h3>
            </div>

            <form action="/adm/computador/cadastrar/<%= posicaoSelecionada %> " method="post">
                <div class="line">
                    <input name="Name" type="text" class="transition" style="width: 68%;" placeholder="Nome" required="required"
                        minlength="6">
                </div>
                <div class="line">
                    <input name="Brand" type="text" class="transition" style="width: 68%;" placeholder="Marca" required="required"
                        minlength="2">
                </div>
                <div class="line">
                    <input name="Model" type="text" class="transition" style="width: 68%;" placeholder="Modelo" required="required"
                        minlength="2">
                </div>

                <div class="item" style="width: 38%; margin: 0 auto;padding: 1em; justify-content: center;" >
                    <p style="text-align: center;">Posição selecionada: <%= posicaoSelecionada %></p>
                </div>
                
                <div class="line" id="line" style="margin-top: 2em;">
                    <button type="submit" value="Cadastrar" style="margin-top: 0;">Editar</button>
                    <button type="submit" value="Cadastrar" id="excluir" style="margin-top: 0;">Excluir</button>
                </div>
            </form>
        </div>

